<h1>Welcome to the Mister Cocktail 🍹</h1>

<div class="flex-container">
  <% @cocktails.each do |cocktail| %>
    <div class="card">
      <h5><%= cocktail.name %></h5>
      <%= link_to "Show recipe", cocktail, class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
<%= link_to "+Add Cocktail", "/cocktails/new", class: "btn btn-primary ml-5"%>
